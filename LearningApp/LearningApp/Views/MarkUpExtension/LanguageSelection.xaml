<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningApp.Views.LanguageSelection"
             xmlns:local="clr-namespace:LearningApp.Extension;assembly=LearningApp"
             Title="Select Language"
             >
    <StackLayout Spacing="30" Padding="20">
        <local:BindablePicker ItemsSource="{Binding LanguageNames}" SelectedItem="{Binding Path=SelectedCat}" />
        <Button Text="Go" Command="{Binding Go}"/>
        
    </StackLayout>
</ContentPage>