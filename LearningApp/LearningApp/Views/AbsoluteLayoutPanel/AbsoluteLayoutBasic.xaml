             xmlns:local="clr-namespace:LearningApp.Extension"
             x:Class="LearningApp.Views.AbsoluteLayoutPanel.AbsoluteLayoutBasic">
    <AbsoluteLayout Padding="50">
        
        <BoxView Color="Black" AbsoluteLayout.LayoutBounds="0,10,200,5" />
        <BoxView Color="Green" AbsoluteLayout.LayoutBounds="0,20,200,5" />
        <BoxView Color="Gray" AbsoluteLayout.LayoutBounds="10,0,5,65" />
        <BoxView Color="Red" AbsoluteLayout.LayoutBounds="20,0,5,65" />

        <Entry local:EntryExtension.AllowOnlyString="True" AbsoluteLayout.LayoutBounds="35,35,200,30" Placeholder="Only string allow"/>
